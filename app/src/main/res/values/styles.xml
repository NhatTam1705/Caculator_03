<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FourButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:backgroundTint">#ddd</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="LayoutNumberStyle">
        <item name="android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_weight">0.2</item>
        <item name = "android:orientation">horizontal</item>
    </style>

    <style name = "TextViewStyle">
        <item name = "android:layout_width">match_parent</item>
        <item name ="android:layout_height">match_parent</item>
        <item name ="android:textAlignment">viewEnd</item>
        <item name = "android:textColor">#fff</item>
        <item name="android:textSize">40dp</item>
        <item name = "android:gravity">center_vertical|end</item>
    </style>
</resources>